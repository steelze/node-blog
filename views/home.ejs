<%- include('./partials/header') %>

<!-- MAIN BODY -->
<main class="main pt-4">
  <div class="container">
    <div class="row">

      <div class="col-md-9">
        <div class="row">
          <% posts.forEach(post => { %>
            <div class="col-md-6">
              <article class="card mb-4">
                <header class="card-header">
                  <div class="card-meta">
                    <a href="/<%= post.slug %>"><time class="timeago" datetime="<%= post.created_at %>"><%= post.created_at %></time></a> in <a href="javascript:void(0)"><%= post.category %></a>
                  </div>
                  <a href="/<%= post.slug %>">
                    <h4 class="card-title"><%= post.title %></h4>
                  </a>
                </header>
                <a href="/<%= post.slug %>">
                  <img class="card-img cover-img" src="<%= post.cover_image %>" alt="" />
                </a>
                <div class="card-body">
                  <p class="card-text"><%= post.snippet %></p>
                </div>
              </article>
            </div>
          <% }) %>
        </div>
      </div>

      <div class="col-md-3 ms-auto">
        <%- include('./partials/aside') %>
      </div>
    </div>
  </div>
</main>

